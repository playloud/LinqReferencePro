        <!--         <DataTemplate x:DataType="{x:Type lib:PeopleModel}"> -->
        <!--             <VerticalStackLayout> -->
        <!--                 <Label Text="{Binding Name }" /> -->
        <!--                 <Label Text="{Binding Age }" /> -->
        <!--                 <Label Text="{Binding Rank }" /> -->
        <!--             </VerticalStackLayout> -->
        <!--         </DataTemplate> -->
        <!--     </ListView.ItemTemplate> -->
        <!-- </ListView> -->

    </VerticalStackLayout>

</ContentPage>